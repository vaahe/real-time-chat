{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "emitDeclarationOnly": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/generated/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.spec.ts"
    ]
}